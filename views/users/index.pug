extends ../layouts/common

block content

    h3(class="text-center") List user
    img(src="/image/logo2.jpg", class="img-thumbnail")
    a(href="/users/create", class="btn btn-primary mb-2 ml-5 w-64 h-64") Add user

    form(action="/users/search", method="GET", class="d-flex mt-3")
        input(type="text", name="name", class="form-control")
        button(class="btn btn-primary ml-2 ") Search
    ul 
        each user in users
            li
                span= user.name
                span &nbsp
                a(href='/users/' + user.id, class="btn btn-primary mb-2") View
                a(href='/users/' + user.id +'/delete', class="btn btn-danger ml-2") Delete
                a(href='/users/' + user.id +'/update', class="btn btn-warning ml-2") Update