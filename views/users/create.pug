extends ../layouts/common

block content
    .container
        h3 Create user
        if errors
            each error in errors
                .alert.alert-danger= error
        form.form-group(action="/users/create", method="POST")

            label(for="name") Name
            input#name.form-control(type="text", name="name", value = values ? values.name : "")

            label(for="phone") Phone
            input#phone.form-control(type="text", name="phone", value = values ? values.phone : "")

            button.btn.btn-primary.mt-2 Create