extends ../layouts/common

block content
    
    .container.pt-5
  
        h2 Profile
        .d-flex.my-4
        if user.avatarUrl
            img.rounded(src= user.avatarUrl width="100" height="100")
        else
            img.rounded(src="https://res.cloudinary.com/dkh65bchm/image/upload/v1587707855/defalut_bibumt.jpg" width="100" height="100") 
        .profile

        form-group
        input(type="hidden", name="id", value=user.id)
        label Name
        input(class="form-control", type="text", name="name", value= user ? user.name : '')
        .form-group
        label Email
        input(class="form-control", type="text", name="email", value= user? user.email: '')
        .form-group
        labe(for="avatar") Avatar
        input#avatar.form-control-file(name="avatar", type="file")
        button.btn.btn-primary.mt-2 Save