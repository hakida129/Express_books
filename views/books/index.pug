extends ../layouts/common

block content

    h3(class="text-center") List book
    a(href="/books/create", class="btn btn-primary mb-2") New book

    form(action="/books/search", method="GET", class="d-flex")
        input(type="text", name="title", class="form-control")
        button(class="btn btn-primary ml-2") Search
    ul 
        each book in books
            li
                span= book.title
                span &nbsp
                a(href='/books/' + book.id, class="btn btn-primary mb-2") View
                a(href='#', class="btn btn-danger ml-2") Delete