extends ../layouts/common

block content
    .container 
        h3(class="text-center") List book
            a(href="/books/create", class="btn btn-primary mb-2 ml-5") New book

        form(action="/books/search", method="GET", class="d-flex mt-3")
            input(type="text", name="title", class="form-control")
            button(class="btn btn-primary ml-2 ") Search
        
        table.table
            tr  
                th Title
                th Description
                th Action
         
            each book in books
                tr
                    td= book.title 
                    td= book.description
                    td 
                        a(href='/books/' + book.id, class="btn btn-primary") View
                        a(href='/books/' + book.id +'/delete', class="btn btn-danger ml-2") Delete
                        a(href='/books/' + book.id +'/update', class="btn btn-warning ml-2") Update